model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  phone     String?
  address   String?
  city      String?
  state     String?
  zip       String?
  role      String   @default("customer")
  orders    Order[]
  createdAt DateTime @default(now())
}

model Product {
  id                  String   @id @default(cuid())
  ppapId              String   @unique
  partNumber          String
  partName            String
  currentPhase        String
  profile             String
  weightKg            Float
  lengthMm            Float
  boltHoleDia         Float
  pitch               Float
  supplierName        String
  price               Float    @default(0)
  imageUrl            String   @default("/placeholder.jpg")
  orderItems          OrderItem[]
  createdAt           DateTime @default(now())
}

model Order {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  total           Float
  shippingCost    Float       @default(0)
  status          String      @default("pending")
  shippingAddress String?
  items           OrderItem[]
  createdAt       DateTime    @default(now())
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}
